<div class="row clearfix">
  <% if shopping_item.completed? %>
    <div class="complete">
      <%= link_to "Mark as Complete", complete_shopping_list_shopping_item_path(@shopping_list, shopping_item.id), method: :patch %>
    </div>
      <div class="shopping_item">
        <p style="opacity: 0.4;"><strike><%= shopping_item.content %></strike></p>
      </div>
      <div class="trash">
        <%= link_to "Delete", shopping_list_shopping_item_path(@shopping_list, shopping_item.id), method: :delete, data: {confirm: "Are you sure?" } %>
      </div>
  <% else %>
      <div class="complete">
        <%= link_to "Mark as Complete", complete_shopping_list_shopping_item_path(@shopping_list, shopping_item.id), method: :patch %>
      </div>
      <div class="shopping_item">
        <p><%= shopping_item.content %></p>
      </div>
      <div class="trash">
        <%= link_to "Delete", shopping_list_shopping_item_path(@shopping_list, shopping_item.id), method: :delete, data: {confirm: "Are you sure?" } %>
      </div>
    <% end %>
</div>