<p id="notice"><%= notice %></p>
<div class="container">
  <h1 class="shopping_list_title">Shopping Lists</h1>

  <div class="row col-md-6 col-md-offset-2 custyle">
    <table class="table custab myTable">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @shopping_lists.each do |shopping_list| %>
        <tr>
          <td><%= shopping_list.title %></td>
          <td><%= shopping_list.description %></td>
          <td><%= link_to 'Show', shopping_list %></td>
          <td><%= link_to 'Edit', edit_shopping_list_path(shopping_list) %></td>
          <td><%= link_to 'Destroy', shopping_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
    </table>
  </div>
  <div class="links">
  <%= link_to 'New Shopping List', new_shopping_list_path %>
  </div>
</div>
<br>


